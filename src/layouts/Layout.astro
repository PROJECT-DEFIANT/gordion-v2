---
import NavComponent from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavComponent />
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Cantarell:ital,wght@0,400;0,700;1,400;1,700&family=Lexend:wght@100;200;300;500;700;900&display=swap");

  :root {
    --bg-color-1: #050737;
    --bg-color-2: #031c49;
    --bg-color-3: #3d1075;
    --font-color: #e8f2f9;
    --font-hover: #91c1e4;
  }

  /* https://www.joshwcomeau.com/css/custom-css-reset/ */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
  }

  html,
  body {
    font-family: "Lexend", sans-serif;
    font-size: 16px;
    font-weight: 400;
  }

  body {
    background: linear-gradient(
      180deg,
      var(--bg-color-1) 0%,
      var(--bg-color-2) 47.92%,
      var(--bg-color-3) 100%
    );
    line-height: calc(1em + 0.5rem);
    -webkit-font-smoothing: antialiased;
    color: var(--font-color);
    position: relative;
    width: 100%;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }
  canvas {
    width: 0px;
    height: 0px;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
    hyphens: none;
    font-weight: 400;
  }

  a {
    text-decoration: none;
    color: inherit;
  }
  section {
    min-height: calc(100vh - 8rem);
  }
</style>
